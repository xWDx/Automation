		 contactFormRepository contacto = new contactFormRepository(driver);
		driver.get("https://winstoncastillo.com/robot-selenium/index.php?route=information/contact");
		
	}
	
	@AfterTest
	public void cerarBrowser(){
		driver.close();
	}
	
